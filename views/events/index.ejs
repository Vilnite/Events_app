
<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>NextDoor Events!</h1>
             <p>View and post awesome house parties, outdoor adventures, gatherings and many more!</p>
             <p>
                <a class="btn btn-primary btn-large" href="/events/new">Add New Event</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% Events.forEach(function(party){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= party.image %>">
                   <div class="caption">
                       <h4><%= party.name %></h4>
                   </div>
                   <p>
                       <a href="/events/<%= party._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>