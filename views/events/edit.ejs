
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= event.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="event[name]" value="<%= event.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="event[image]" value="<%= event.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="event[description]" value="<%= event.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="event[price]" value="<%= event.price %>" min="0.01" step="0.01">
                    <!--min is the minimal amout that user can enter and step is the amount by which user can increase or decrease amount using arrows up and down-->
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/events">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>